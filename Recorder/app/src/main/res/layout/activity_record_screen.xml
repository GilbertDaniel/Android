<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thodoris.recorder.RecordScreen"
    android:background="#E46F63"
    android:id="@+id/recording_screen">


        <TextView
            android:id="@+id/recording_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recording time"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/time"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="80dp"
            android:layout_centerInParent="true" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/record_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/fab2"
        android:src="@drawable/ic_action_stop"
        android:scaleType="fitXY"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:id="@+id/save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_accept"
        android:background="#00000000"
        android:layout_toRightOf="@+id/record_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:scaleType="fitXY"
        android:padding="5dp"/>

    <ImageButton
        android:id="@+id/discard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_discard"
        android:background="#00000000"
        android:layout_toLeftOf="@+id/record_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:scaleType="fitXY"
        android:padding="5dp"/>

</RelativeLayout>
